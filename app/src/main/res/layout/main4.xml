<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cce0ff"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PROJECT"
        android:textSize="22sp"
        android:textColor="#1E1E1E"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"/>


    <TextView
        android:id="@+id/about_me4"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:justificationMode="inter_word"
        android:text="This is my Final Year Project (FYP) on the Excellence Award Nomination System, utilizing HTML, CSS, and JavaScript to streamline and enhance the efficiency and accuracy of marks input at Politeknik Seberang Perai."
        android:textColor="#333333"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/login" />



    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/nominationform"
        android:layout_marginBottom="18dp"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/coding"
        android:layout_marginBottom="19dp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#9c9cff"
        android:gravity="center"
        android:padding="12dp"
        android:text="Go to Page 3"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#9c9cff"
        android:gravity="center"
        android:padding="12dp"
        android:text="Go to Page 1"
        android:textColor="#000000"
        android:textSize="20sp"

        android:textStyle="bold" />
</LinearLayout>